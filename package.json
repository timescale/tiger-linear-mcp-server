{
  "name": "@tigerdata/tiger-linear-mcp-server",
  "version": "0.1.0",
  "description": "MCP server to pull status from Linear",
  "license": "UNLICENSED",
  "author": "TigerData",
  "homepage": "https://tigerdata.com",
  "type": "module",
  "bin": {
    "tiger-linear-mcp-server": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch:stdio": "tsc --watch",
    "watch": "tsx watch src/index.ts http",
    "start:stdio": "node dist/index.js stdio",
    "start": "node dist/index.js http",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "inspector": "npx @modelcontextprotocol/inspector"
  },
  "dependencies": {
    "@linear/sdk": "^64.0.0",
    "@tigerdata/mcp-boilerplate": "^0.7.0",
    "dotenv": "^17.2.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.19.1",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
