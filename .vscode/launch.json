{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Linear MCP",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "Debug Linear MCP - Build Only",
      "program": "${workspaceFolder}/dist/index.js",
      "args": ["http"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development",
        "PORT": "5562"
      },
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "group": "mcp",
        "order": 1
      }
    },
    {
      "name": "Debug Linear MCP (STDIO)",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "Debug Linear MCP - Build Only",
      "program": "${workspaceFolder}/dist/index.js",
      "args": ["stdio"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "group": "mcp",
        "order": 2
      }
    }
  ]
}